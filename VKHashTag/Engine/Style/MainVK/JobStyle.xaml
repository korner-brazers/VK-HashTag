<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                    x:Class="VKHashTag.Engine.Style.MainVK.Generic.JobStyle">


    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/Engine/Style/all.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Canvas Width="48" Height="48" Clip="F1 M 0,0L 48,0L 48,48L 0,48L 0,0" UseLayoutRounding="False" x:Key="CanvasArrowsRigt">
        <Path Width="13" Height="21" Canvas.Left="19" Canvas.Top="13" Stretch="Fill" Fill="{DynamicResource HighlightBrush}" Data="F1 M 19,14L 31.9999,23.7501L 31.9999,24.5001L 19,34L 19,14 Z " />
    </Canvas>

    <Canvas Width="48" Height="48" Clip="F1 M 0,0L 48,0L 48,48L 0,48L 0,0" UseLayoutRounding="False" x:Key="CanvasArrowsLeft">
        <Path Width="13" Height="21" Canvas.Left="19" Canvas.Top="13" Stretch="Fill" Fill="{DynamicResource HighlightBrush}" Data="F1 M 19,14L 31.9999,23.7501L 31.9999,24.5001L 19,34L 19,14 Z " >
            <Path.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="-1"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Path.RenderTransform>
        </Path>
    </Canvas>


