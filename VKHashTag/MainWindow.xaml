            </Canvas>

            <Ellipse x:Key="AccentFlyoutThemeMenuIcon" x:Shared="False" Width="16" Height="16" StrokeThickness="1" Stroke="{DynamicResource AccentColorBrush}" Fill="{DynamicResource AccentColorBrush}" />
            <Ellipse x:Key="DarkFlyoutThemeMenuIcon" x:Shared="False" Width="16" Height="16" StrokeThickness="1" Stroke="Black" Fill="#2b2b2b" />
            <Ellipse x:Key="DarkThemeMenuIcon" x:Shared="False" Width="16" Height="16" StrokeThickness="1" Stroke="Black" Fill="Black" />
            <Ellipse x:Key="LightThemeMenuIcon" x:Shared="False" Width="16" Height="16" StrokeThickness="1" Stroke="Black" Fill="White" />
            <Ellipse x:Key="AccentMenuIcon" x:Shared="False" Width="16" Height="16" Fill="{Binding ColorBrush, Mode=OneWay}" />

            <Style x:Key="AccentColorMenuItemStyle" TargetType="{x:Type ListBoxItem}">
                <Setter Property="FocusVisualStyle" Value="{x:Null}" />
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="ListBoxItem">
                            <MenuItem Margin="14,0,14,0" Height="28" 
                                      Foreground="{Binding RelativeSource={RelativeSource AncestorType={x:Type Controls:Flyout}}, Path=Foreground}" 
                                      Command="{Binding ChangeAccentCommand}" 
                                      Header="{Binding Name, Mode=OneWay}" 
                                      Icon="{StaticResource AccentMenuIcon}" />
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <converters:MatchConv x:Key="MatchConv"/>
        </ResourceDictionary>
    </Window.Resources>



    
    <!--////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
        /////#############                                         Иконка и титл                                              #############/////
        ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////-->
    <Controls:MetroWindow.IconTemplate>
        <DataTemplate>
            <Grid Margin="4"
                  Width="{TemplateBinding Width}" 
                  Height="{TemplateBinding Height}" 
                  Background="{DynamicResource IdealForegroundColorBrush}"
                  RenderOptions.EdgeMode="Aliased" 
                  RenderOptions.BitmapScalingMode="HighQuality">
                <Grid.OpacityMask>
                    <VisualBrush Stretch="Uniform" Visual="{DynamicResource appbar_os_windows_8}" />
                </Grid.OpacityMask>
            </Grid>
        </DataTemplate>
    </Controls:MetroWindow.IconTemplate>
    

    
    
    <!--////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
        /////#############                           Боковые кнопки слева (Settings,Theme, GitHub)                            #############/////
        ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////-->
    <Controls:MetroWindow.RightWindowCommands>
        <Controls:WindowCommands>
            <Button ToolTip="Настройки программы" 
                    Content="Settings" 
                    Click="ShowModal_Settings"/>
            
            <Button x:Name="BT_Theme" 
                    ToolTip="Выбор цветовой схемы программы" 
                    Content="Theme" 
                    Click="ShowModal_Theme"/>
            
            <Button Click="LaunchOnGitHub" 
                    ToolTip="Source on GitHub">
                <Rectangle Width="22" Height="22" Fill="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Foreground}">
                    <Rectangle.OpacityMask>
                        <VisualBrush Stretch="Uniform" Visual="{StaticResource appbar_github}" />
                    </Rectangle.OpacityMask>
                </Rectangle>
            </Button>
        </Controls:WindowCommands>
    </Controls:MetroWindow.RightWindowCommands>





    <!--////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
        /////#############                                  Мендальныое окно (настройки программы)                            #############/////
        ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////-->
    
    <Controls:MetroWindow.Flyouts>
        <Controls:FlyoutsControl>
            <Controls:Flyout Header="Settings" 
                             Position="Right" 
                             Margin="180,0,0,0" 
                             AnimateOnPositionChange="{Binding AnimateOnPositionChange}" 
                             Width="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=Controls:MetroWindow}, Path=ActualWidth}" 
                             Theme="{Binding ElementName=TB_FlyoutsTheme, Path=Tag}" 
                             IsModal="True">
                <UserControls:Settings />
            </Controls:Flyout>


            
    <!--////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
        /////#############                                Мендальныое окно (Выбор оформления программы)                       #############/////
        ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////-->
            
            <Controls:Flyout Header="Theme" 
                             Width="196" 
                             Position="Right" 
                             AnimateOnPositionChange="{Binding AnimateOnPositionChange}" 
                             Theme="{Binding ElementName=TB_FlyoutsTheme, Path=Tag}">
                <Grid>
                    <StackPanel Orientation="Vertical">
                        <StackPanel Margin="14,0,14,0" Orientation="Vertical">
                            <MenuItem Click="SelectionTheme"  
                                      Header="Light" 
                                      Icon="{StaticResource LightThemeMenuIcon}" />
                            
                            <MenuItem Click="SelectionTheme" 
                                      Header="Dark" 
                                      Icon="{StaticResource DarkThemeMenuIcon}" />
                        </StackPanel>

                        <Grid Margin="0,20,0,0" 
                              Background="{DynamicResource AccentColorBrush}" 
                              VerticalAlignment="Top">
                            <TextBlock FontSize="16"
                                       Text="Flyout Theme" 
                                       VerticalAlignment="Center" 
                                       HorizontalAlignment="Center" 
                                       Foreground="{Binding RelativeSource={RelativeSource AncestorType={x:Type Controls:Flyout}}, Path=Foreground}" />
                        </Grid>

                        
                        <StackPanel Margin="14,10,14,0" Orientation="Vertical">
                            <MenuItem Click="SelectionFlyoutTheme"  
                                      Header="Accent" 
                                      Icon="{StaticResource AccentFlyoutThemeMenuIcon}" />
                            
                            <MenuItem Click="SelectionFlyoutTheme" 
                                      Header="Dark" 
                                      Icon="{StaticResource DarkFlyoutThemeMenuIcon}" />
                            
                            <MenuItem Click="SelectionFlyoutTheme" 
                                      Header="Light" 
                                      Icon="{StaticResource LightThemeMenuIcon}" />
                        </StackPanel>

                        
                        <Grid Margin="0,20,0,0" 
                              Background="{DynamicResource AccentColorBrush}" 
                              VerticalAlignment="Top">
                            <TextBlock Foreground="{Binding RelativeSource={RelativeSource AncestorType={x:Type Controls:Flyout}}, Path=Foreground}" 
                                       FontSize="16"
                                       Text="Accent" 
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center" />
                        </Grid>
                    </StackPanel>


                    <Grid Margin="0,243,0,30" x:Name="GridAccentColors">
                        <ListBox x:Name="LB_AccentColors" 
                                 Background="{x:Null}" 
                                 Height="{Binding ElementName=GridAccentColors, Path=ActualHeight, Converter={StaticResource MatchConv}, ConverterParameter='DoubleInt: value - (value % 28)'}"
                                 ItemsSource="{Binding AccentColors, Mode=OneWay}"
                                 ItemContainerStyle="{StaticResource AccentColorMenuItemStyle}" 
                                 BorderThickness="0" 
                                 BorderBrush="{x:Null}" 
                                 ScrollViewer.HorizontalScrollBarVisibility="Disabled" 
                                 ScrollViewer.VerticalScrollBarVisibility="Disabled"/>
                    </Grid>
                </Grid>
            </Controls:Flyout>
        </Controls:FlyoutsControl>
    </Controls:MetroWindow.Flyouts>



    <!--////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
        /////#############                                           Тело программы                                           #############/////
        ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////-->
    <Grid>
        <Grid Margin="0,0,0,20">
            <TextBlock x:Name="TB_FlyoutsTheme" />
            
            <Controls:MetroAnimatedSingleRowTabControl x:Name="AnimatedTabControl" Margin="0,-6,0,0">
                <TabItem>
                    <UserControls:MainVK />
                </TabItem>
                <TabItem>
                    <UserControls:JobADD_HashTag />
                </TabItem>
            </Controls:MetroAnimatedSingleRowTabControl>
        </Grid>
        
        
        <StatusBar Height="20"
                   DockPanel.Dock="Bottom" 
                   VerticalAlignment="Bottom" 
                   Background="{DynamicResource WindowTitleColorBrush}">
            <TextBlock x:Name="TB_StatusBar" 
                       Margin="3,-1,0,0" 
                       Foreground="{DynamicResource IdealForegroundColorBrush}" 
                       Text="Feedron.ru" 
                       Cursor="Hand"
                       MouseDown="TB_StatusBar_MouseDown" />
        </StatusBar>
    </Grid>
</Controls:MetroWindow>